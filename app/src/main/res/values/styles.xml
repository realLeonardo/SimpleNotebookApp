<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  TAB BAR COLOR  -->
    <style name="SelectedTabStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontWeight">700</item>
    </style>

    <style name="NormalTabStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#353535</item>
        <item name="android:fontWeight">500</item>
    </style>

    <!--  NOTE LIST STYLE BEGIN  -->
    <style name="NoteContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">13dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">createBtnClickHandler</item>
    </style>
    <style name="NoteTitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">TextView</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="NoteContentTextStyle">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">5</item>
    </style>
    <!--  NOTE LIST STYLE END  -->

    <!--  TASK ITEM STYLE  -->
    <style name="TaskContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">13dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="TaskCheckBoxStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">5dp</item>
    </style>
</resources>