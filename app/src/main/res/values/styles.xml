<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  TAB BAR COLOR  -->
    <style name="SelectedTabStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontWeight">700</item>
    </style>

    <style name="NormalTabStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#353535</item>
        <item name="android:fontWeight">500</item>
    </style>

    <!--  APP LIST STYLE BEGIN  -->
    <style name="AppContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">13dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">appDetailBtnClickHandler</item>
    </style>
    <style name="AppTitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">TextView</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="AppContentTextStyle">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">5</item>
    </style>
    <!--  NOTE LIST STYLE END  -->

    <style name="DashboardSubtitleTextStyle">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>